<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/scheduling</property>
        <property name="hibernate.connection.username">alai</property>
        <property name="hibernate.connection.password"></property>
        <!--<property name="hibernate.hbm2ddl.auto">update</property>-->
        <property name="show_sql">false</property>


        <mapping class="com.allenisalai.op.Client"/>
        <mapping class="com.allenisalai.op.Staff"/>
        <mapping class="com.allenisalai.op.Session"/>
    </session-factory>
</hibernate-configuration>
